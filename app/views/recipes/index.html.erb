<div class="d-flex justify-content-center">
  <h1>Recipes</h1>
</div>

<div class="container" style="text-align: center;">
  <%= link_to "Upload a recipe", new_recipe_path, class: "btn btn-secondary" %>
  <%= link_to "Favourites", favourites_path, class: "btn btn-secondary" %>
  <%= form_tag recipes_path, method: :get do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search recipes"%>
    <div class="button-row">
      <%= submit_tag "Search", name: nil, class: "btn btn-secondary"%>
    </div>
  <% end %>


  <% @recipes.each do |recipe| %>
    <div class="card">
      <h2><%= recipe.name %></h2>
      <h4><%= recipe.description %></h4>
      <%# AT: image text Fri 05/05 %>
        <% if recipe.image.attached? %>
          <%= cl_image_tag recipe.image.key %>
        <% end %>
        <%# ############# %>
        <%= link_to "View Recipe", recipe_path(recipe), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

<div class="container" style="text-align: center;">
  <%= link_to "Back to choice", choice_path, class: "btn btn-secondary" %>
  <%= link_to "Go to home", root_path, class: "btn btn-secondary" %>
</div>
