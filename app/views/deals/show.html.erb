  <div class="container">
  <div class="card">
    <div class="card-show">
      <h1 class="text-center"><%= @deal.name %></h1>
      <div class="card-deal-description">
        <div class="card-deal-description-text">
          <%= @deal.description %>
        </div>
        <div class="card-deal-image">
          <% if @deal.image.attached? %>
            <%= cl_image_tag @deal.image.key, class:"card-deal-image"%>
          <% end %>
        </div>
      </div>
      <% if @deal.start_date && @deal.end_date.present? %>
        <p class="deal-date">Starts on: <%= @deal.start_date.strftime('%d-%m-%Y') %></p>
        <p class="deal-date">Ends on: <%= @deal.end_date.strftime('%d-%m-%Y') %></p>
      <% end %>
      <ul class="category-tag">
        <% if @deal.user && @deal.user.username.present? %>
          <li> Submitted by: <%= @deal.user.username %></li>
        <% elsif @deal.business.present? && @deal.business.name.present? %>
          <li> Submitted by: <%= @deal.business.name %></li>
        <% end %>
        <li><i class="fa fa-tag"></i> <%= @deal.category %></li>
      </ul>
    </div>
  </div>
</div>

<br>

<h2 class="text-center m-2" >Recommended recipes</h2>

<div class="container">
  <% @deal.recipes.each do |recipe| %>
    <div class="card my-2 mx-2">
      <h3 class="text-center recipe-title"><%= link_to recipe.name, recipe_path(recipe) %></h3>
      <% if recipe.image.attached? %>
        <%= cl_image_tag recipe.image.key, class:"card-recipe-image"%>
      <% end %>
      <p class="recipe-description"><%= recipe.description %></p>
    </div>
  <% end %>
</div>
