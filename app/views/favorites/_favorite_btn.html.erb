<% if current_user.favorited?(recipe) %>
  <%= link_to '', toggle_favorite_recipe_path(recipe), class: "fa-solid fa-heart heart-icon", data: { turbo_method: :post } %>
<% else %>
  <%= link_to '', toggle_favorite_recipe_path(recipe), class: "fa-regular fa-heart heart-icon", data: { turbo_method: :post } %>
<% end %>

