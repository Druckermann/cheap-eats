<div class="container">
  <h2>Find a deal near you</h2>
  <%= form_tag(deals_path, method: :get) do %>
    <%= label_tag(:postcode, "Enter your postcode:") %>
    <%= text_field_tag(:postcode) %>
    <%= submit_tag("Search") %>
  <% end %>
</div>
<br>
<p>Just before map</p>

<div style="width: 100%; height: 300px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<p>Just after map</p>





<div class="container">
  <h2>Upload a deal</h2>
  <%= link_to "Add a deal I have found", new_deal_path, class: "btn btn-secondary" %>
</div>











<nav class="navbar fixed-bottom bg-light">
  <div class="row justify-content-between">
    <div class="col text-center"><i class="fa-solid fa-house"></i></div>
    <div class="col text-center"><i class="fa-solid fa-dollar-sign"></i></div>
    <div class="col text-center"><i class="fa-solid fa-utensils"></i></div>
    <div class="col text-center"><i class="fa-solid fa-user"></i></div>
  </div>
</nav>
