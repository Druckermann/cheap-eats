<h2 class="text-center">Log in</h2>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),  data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, input_html: { class: 'f-input-custom' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, input_html: { class: 'f-input-custom' } %>
      <%= f.input :remember_me, input_html: { class: 'f-input-custom' }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn-btn-recipe-new" %>
    </div>
  <% end %>

    <div class="container" style="margin-top: 20px;">
      <%= render "devise/shared/links" %>
    </div>
</div>
