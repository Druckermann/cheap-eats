<div class="text-center">
  <h1>Deals</h1>
</div>

<div class="text-center">
  <%= link_to "Submit a new deal", new_deal_path, class:"btn btn-secondary" %>
</div>

<div class="container" style="text-align: left;">
  <% @deals.each do |deal| %>
    <div class="row my-2 mx-2">
      <%= link_to deal do %>
      <div class="card">
        <h4><%= deal.name %></h4>
        <div class="d-flex p-0.5" style="text-align: left;">
          <%= deal.description %>

            <% if deal.image.attached? %>
              <%= cl_image_tag deal.image.key, class:"card-deal-image" %>
            <% end %>

        </div>
        <ul class="category-tag p-0">
          <% if deal.user && deal.user.username.present? %>
            <li> Submitted by: <%= deal.user.username %></li>
           <% elsif deal.business.present? && deal.business.name.present? %>
            <li> Submitted by: <%= deal.business.name %></li>
          <% end %>
            <li><i class="fa fa-tag"></i> <%= deal.category %></li>
        </ul>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
