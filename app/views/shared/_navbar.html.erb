<div class="d-flex navbar-bottom">
  <div class="container-fluid">
    <div class="row">
      <div class="col text-center">
        <%= link_to root_path, class: "nav-link" do %>
          <i class="fa-solid fa-house nav-icon"></i>
          <br>
          <span class="nav-bar-text">Home</span>
        <% end %>
      </div>
        <div class="col text-center">
          <div class="dropdown">
            <a href="#" class="nav-link dropdown-toggle no-caret" id="dealsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= raw('<i class="fa-solid fa-dollar-sign nav-icon"></i>') %>
              <br>
              <span class="nav-bar-text">Deals</span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dealsDropdown">
              <%= link_to deals_path, class: "dropdown-item" do %>
                <i class="fa-solid fa-magnifying-glass nav-icon"></i>
                <span class="dropdown-item-text">Find a Deal</span>
              <% end %>
              <%= link_to new_deal_path, class: "dropdown-item" do %>
                <i class="fa-solid fa-circle-plus nav-icon"></i>
                <span class="dropdown-item-text">Add a Deal</span>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="col text-center">
          <div class="dropdown">
            <a href="#" class="nav-link dropdown-toggle no-caret" id="recipeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= raw('<i class="fa-solid fa-utensils nav-icon"></i>') %>
              <br>
              <span class="nav-bar-text">Recipes</span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="recipeDropdown">
              <%= link_to recipes_path, class: "dropdown-item" do %>
                <i class="fa-solid fa-magnifying-glass nav-icon"></i>
                <span class="dropdown-item-text">Find a Recipe</span>
              <% end %>
              <%= link_to new_recipe_path, class: "dropdown-item" do %>
                <i class="fa-solid fa-circle-plus nav-icon"></i>
                <span class="dropdown-item-text">Add a Recipe</span>
              <% end %>
              <%= link_to favorites_path, class: "dropdown-item" do %>
                <i class="fa-solid fa-heart-circle-check nav-icon"></i>
                <span class="dropdown-item-text">See Your Saved Recipes</span>
              <% end %>
            </ul>
          </div>
        </div>
     <div class="col text-center">
        <a href="#" class="nav-link" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fa-solid fa-user nav-icon"></i>
          <br>
          <span class="nav-bar-text">Profile</span>
        </a>
        <div class="dropdown-menu" aria-labelledby="profileDropdown">
          <% if user_signed_in? %>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </div>
